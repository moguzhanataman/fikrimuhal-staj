# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /api/customer               controllers.CustomerController.list()
GET     /api/customer/:id           controllers.CustomerController.get(id)
GET     /api/customer/:id/cart      controllers.CustomerController.cart(id)

GET     /api/employee               controllers.EmployeeController.list()
GET     /api/employee/:id           controllers.EmployeeController.get(id)

GET     /api/products               controllers.ProductController.list()
GET     /api/products/popular       controllers.ProductController.popular()

GET     /api/cart                   controllers.CartController.list()
GET     /api/cart/:id               controllers.CartController.get(id)




GET     /api/employees                      controllers.EmployeeController.list()
GET     /api/employees/:id                  controllers.EmployeeController.get(id)

GET     /api/customers/current              controllers.CustomerController.currentCustomersList()
GET     /api/customers/:id                  controllers.CustomerController.getCustomer(id)
GET     /api/customers/:id/photo            controllers.CustomerController.getCustomerPhoto(id)
GET     /api/customers/:id/products         controllers.CustomerController.getCustomerProducts(id)

GET     /api/products                       controllers.ProductController.list()

GET     /api/customers/:id/cart             controllers.CartController.getCart(id)
POST    /api/customers/:id/cart             controllers.CartController.updateCart(id)
DELETE  /api/customers/:id/cart
GET     /api/customers/:id/cart/checkout


